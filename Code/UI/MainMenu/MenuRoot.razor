@using Sandbox.Menu
@using Sandbox.UI;

@inherits Sandbox.UI.NavHostPanel
@namespace HC2
@attribute [StyleSheet]

<root>
	<div class="background" />
	<div class="navigator-canvas" slot="navigator-canvas" />
</root>

@code
{
	public static MenuRoot Instance { get; private set; }

	public bool IsPauseMenu { get; set; }

	public MenuRoot()
	{
		GameSettingsSystem.Load();

		DefaultUrl = "/";
		AddDestination("/", typeof(LandingPage));
		AddDestination("/characters", typeof(CharactersPage));
		AddDestination("/worlds", typeof(WorldsPage));
		AddDestination("/settings", typeof(SettingsPage));

		Instance = this;
	}
}
